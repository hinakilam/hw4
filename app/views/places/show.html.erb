<h1 class="mb-4"><%= @place.name %></h1>

<h2 class="mb-5">My Posts</h2>
<div class="row">
  <% for post in @place.posts.where(user: @current_user) %>
    <div class="col-sm-12 col-md-4 p-2" >
      <%if post.image.attached?%>
        <img src="<%= url_for(post.image)%>" class="img-fluid"/>
      <%end%>  
      <h3><%= post.title %></h3>
      <h4><%= post.posted_on %></h4>
      <p><%= post.description %></p>
    </div>
  <% end %>
</div>
<p>
  <a href="/posts/new?place_id=<%= @place.id %>" class="btn btn-primary">New Post</a>
</p>

<p>
  <a href="/places">Back to All Places</a>
</p>